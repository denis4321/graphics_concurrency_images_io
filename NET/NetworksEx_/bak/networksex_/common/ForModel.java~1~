package networksex_.common;

import javax.swing.DefaultListCellRenderer;
import javax.swing.JList;
import networksex_.server.Person1;
import javax.swing.JLabel;
import java.awt.Component;

/**
 * <p>Title: </p>
 *
 * <p>Description: </p>
