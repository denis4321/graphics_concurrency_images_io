public class ForModel extends DefaultListCellRenderer{

    public Component getListCellRendererComponent(JList list,Object value, int index, boolean isSelected,boolean cellHasFocus) {
        Person1 p =new Person1();
        p=(Person1)value;
        JLabel lab=(JLabel)super.getListCellRendererComponent(list,p.getName()+" "+p.getAmount(),index,isSelected,cellHasFocus);
             return lab;
         }
           })

}
