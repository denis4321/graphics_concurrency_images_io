class MainInt_GetPageBut_actionAdapter implements ActionListener {
    private MainInt adaptee;
    MainInt_GetPageBut_actionAdapter(MainInt adaptee) {
        this.adaptee = adaptee;
    }

    public void actionPerformed(ActionEvent e) {
        adaptee.getPage();
    }
}
