public class Generator {
    private static int [] koloda;
    private Random rnd;

    public Generator() {
        rnd = new Random();
        koloda = new int[36];
        for (int i=0;i<36;i++){
           koloda[i] = i+1;
       }
    }

    public int[] setNewRandomKoloda(){
        int p=0;
        int place=0;
        for (int i=0;i<36;i++){
           p = rnd.nextInt(35);
           place=koloda[i];
           koloda[i]=koloda[p];
           koloda[p]=place;
       }
       System.out.println(Arrays.toString(koloda));
        return koloda;
    }

    public static int[] getKoloda(){
        return koloda;
    }
}
