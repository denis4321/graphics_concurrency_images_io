    }

    public  int[] getNumbersOfCards(){
        int [] a=new int[9];
        int j=0;
        for (int i=getOwnNumber();i<36;i=i+4){
            a[j] = Generator.getKoloda()[i];
            j++;
        }
        return a;
    }

    public  int getKinutaCarta(){
        --amountOfCards;
        repaint();
        k++;
        return getNumbersOfCards()[k];
        //return kinutaCarta;
    }



    public  void setKinutaCarta(int i){
        kinutaCarta=i;
    }




