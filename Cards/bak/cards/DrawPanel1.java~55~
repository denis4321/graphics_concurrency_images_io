          g.drawImage(new ImageIcon("C:\\Documents and Settings\\Me\\Рабочий стол\\my\\"+getNumbersOfCards()[i]+"q.PNG").getImage(),x,0,null);
           x=x+30;
        }
        //g.drawString(c+"",10,10);
         System.out.println(ownNumber);
    }


