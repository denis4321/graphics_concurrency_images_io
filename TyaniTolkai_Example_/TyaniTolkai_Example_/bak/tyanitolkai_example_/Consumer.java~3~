package tyanitolkai_example_;

public class Consumer extends Thread{
    private long delay;

    public Consumer(long delay) {
        this.delay = delay;
    }

    public void run(){
        int num = 0;
        while (num<100){
            num = TTMain.p.consume();
            synchronized (TTMain.p){
                TTMain.p.notify();
            }
            System.out.println("\t"+num+" consumed");
            try {
                Thread.sleep(delay);
            } catch (InterruptedException ex) {
                ex.printStackTrace();
            }
        }
    }
}
